<div class="col-9 col-md-6 py-2">
  <div class="card hoverable">
    <div class="container-fluid">
      <div class="row">
          <div class="card-img p-0 col-sm-4 d-flex justify-content-center">
            {% if person.image %}
              {% include figure.liquid loading=eager path=person.image alt=person.name %}
            {% else %}
              <h1 class="mx-auto my-0 p-5 p-sm-3 align-self-center text-light"><i class="fa fa-2x fa-user"></i></h1>
            {% endif %}
          </div>
          <div class="col-sm-8 py-3 align-self-sm-center">
              <h5 class="card-title">{{ person.name }}{% if person.degrees %}, {{ person.degrees }}{% endif %}</h5>
              <p class="card-text"><a href="{{ person.website | relative_url }}">{{ person.affiliation }}</a></p>
          </div>
      </div>
    </div>
  </div>
</div>