{% if person.website %}
  <a
    {% if include.class %}
      class="{{include.class}}"
    {% endif %}
    href="{{ person.website }}"
    title="Website"
    ><i class="fa-solid fa-globe"></i
  ></a>
{% endif %}
{% if person.github_username %}
  <a
    {% if include.class %}
      class="{{include.class}}"
    {% endif %}
    href="https://github.com/{{ person.github_username }}"
    title="GitHub"
    ><i class="fa-brands fa-github"></i
  ></a>
{% endif %}
{% if person.linkedin_username %}
  <a
    {% if include.class %}
      class="{{include.class}}"
    {% endif %}
    href="https://www.linkedin.com/in/{{ person.linkedin_username }}"
    title="LinkedIn"
    ><i class="fa-brands fa-linkedin"></i
  ></a>
{% endif %}
{% if person.orcid_id %}
  <a
    {% if include.class %}
      class="{{include.class}}"
    {% endif %}
    href="https://orcid.org/{{ person.orcid_id }}"
    title="ORCID"
    ><i class="fa-brands fa-orcid"></i
  ></a>
{% endif %}
{% if person.research_gate_profile %}
  <a
    {% if include.class %}
      class="{{include.class}}"
    {% endif %}
    href="https://www.researchgate.net/profile/{{person.research_gate_profile}}/"
    title="ResearchGate"
    ><i class="fa-brands fa-researchgate"></i
  ></a>
{% endif %}
{% if person.scholar_userid %}
  <a
    {% if include.class %}
      class="{{include.class}}"
    {% endif %}
    href="https://scholar.google.com/citations?user={{ person.scholar_userid }}"
    title="Google Scholar"
    ><i class="fa-brands fa-google-scholar"></i
  ></a>
{% endif %}
